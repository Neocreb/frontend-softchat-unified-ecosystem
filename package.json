  "name": "softchat-platform",
  "version": "1.0.0",
  "description": "AI-powered social media and marketplace platform with crypto trading and freelancing features",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development npx tsx server/index.ts",
    "dev:enhanced": "NODE_ENV=development npx tsx server/enhanced-index.ts",
    "dev:comprehensive": "NODE_ENV=development npx tsx server/comprehensive-server.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "esbuild server/comprehensive-server.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --target=node18",
    "build:legacy": "esbuild server/enhanced-index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --target=node18",
    "start": "NODE_ENV=production node dist/comprehensive-server.js",
    "start:legacy": "NODE_ENV=production node dist/enhanced-index.js",
    "start:original": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:push:comprehensive": "drizzle-kit push --config=drizzle.comprehensive.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:generate:comprehensive": "drizzle-kit generate --config=drizzle.comprehensive.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:comprehensive": "drizzle-kit studio --config=drizzle.comprehensive.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.comprehensive.config.ts",
    "setup": "npm install && npm run db:generate:comprehensive && npm run db:push:comprehensive",
    "setup:env": "cp .env.comprehensive.example .env",
    "setup:legacy": "npm install && npm run db:generate && npm run db:push",
    "create-admin": "npx tsx scripts/create-admin.ts",
    "create-admin:comprehensive": "npx tsx scripts/create-comprehensive-admin.ts",
    "test": "echo 'No tests specified yet'",
    "test:api": "echo 'API tests not implemented yet'",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "docs:serve": "echo 'API documentation server not implemented yet'"
  },
